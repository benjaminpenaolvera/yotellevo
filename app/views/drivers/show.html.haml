.row.mt-5
  .col-md-4
    .text-center
      %img.img-thumbnail.rounded{src: 'https://st2.depositphotos.com/1104517/11967/v/950/depositphotos_119675554-stock-illustration-male-avatar-profile-picture-vector.jpg', alt:'@driver.name'}

  .col-md-6
    .card{style:'width 18rem;'}
      .card-body
        %h5.card-title
          = @driver.name
        %p.card-text
          = @driver.email
        %p.card-text
          = @driver.phone_number
        %p.card-text
          = @driver.observations
        %p.card-text
          = @driver.status

  .col-md-2
    .text-left.mb-3
      = link_to 'Imprimir perfil', '#', class: 'btn btn-primary btn-block'
    .text-left.mb-3
      = link_to 'Imprimir historial', '#', class: 'btn btn-primary btn-block'
    .text-left.mb-3
      = link_to 'Ediar perfil', edit_driver_path(@driver), class: 'btn btn-primary btn-block'
    .text-left.mb-3
      = link_to 'Inhabilitar chofer', '#', class: 'btn btn-danger btn-block'
